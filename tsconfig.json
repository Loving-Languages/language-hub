{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    // this enables stricter inference for data properties on `this`
    "strict": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "public/*": ["../public/*"]
    }
  },
  "exclude": ["node_modules"]
}